import java.util.*;

public class Methoden {
  
  public static void main(String[] args) {
    
    System.out.println(pluszwei(5));
    System.out.println(halbieren(15));
    System.out.println(quadrieren(5));
    System.out.println(verknuepfen("peter", "ludolf"));
    System.out.println(summe(2, 3));
    
    
    
  } // end of main
  
    public static int pluszwei (int eingabe) {
      int ergebnis = eingabe + 2;
      return ergebnis;
    }
    
    public static double halbieren (int eingabe){
      double ergebnis = eingabe/2;
      return ergebnis;
    }
    
    public static int quadrieren (int eingabe) {
      int ergebnis = eingabe * eingabe;
      return ergebnis; 
     }
     
    public static String verknuepfen (String eingabe1, String eingabe2) {
      String ausgabe = eingabe1 + eingabe2;
      return ausgabe;
     }
     
     public static int summe (int eingabe1, int eingabe2){
     int ergebnis = eingabe1 + eingabe2;
     return ergebnis;
     }
      
      
  
} // end of class Methoden
